
<%- include('./partials/head', {title: 'Registro'}) %>

    <%- include('./partials/headerNavbar') %>

    <section class="formulario-registro">


        <form action="/register" method="POST" class="form" enctype="multipart/form-data">
            <h3>Registro de Usuario</h3>
            <div class="nombre">
                <input type="text" id="nombre" name="name" placeholder="Nombre y Apellido" required  minlength="2">
            </div>
            <div class="user">
                <input type="user" id="user" placeholder="Nombre de Usuario" name="user"  required minlength="2">
            </div>
            <div class="mail-registro">
                <input type="email" id="mail" placeholder="E-mail" name="mail" required  minlength="2">
            </div>   
            <div class="nacimiento">
                <label for="nacimiento">Fecha de Nacimiento</label>
                <input type="date" id="nacimiento" name="born" >
            </div>
            <div class="domicilio">
                <input type="text" id="domicilio" placeholder="Domicilio (opcional)" name="address">
            </div>

            <div class="intereses">
                <h4>Intereses</h4>
                <div class="checks">
                    <input type="checkbox" name="ficcion" value="ficcion">
                    <label for="ficcion">Ciencia Ficci칩n</label>
                </div>
                <div class="checks">
                    <input type="checkbox" name="aventuras" value="aventuras" >
                    <label for="aventuras">Aventuras</label>
                </div>
                <div class="checks">
                    <input type="checkbox" name="romance" value="romance">
                    <label for="romance">Romance</label>
                </div>    
                <div class="checks">
                    <input type="checkbox" name="investigacion" value="investigacion">
                    <label for="investigacion">Investigaci칩n</label>
                </div>    
                <div class="checks">
                    <input type="checkbox" name="universitarios" value="universitarios">
                    <label for="universitarios">Universitarios</label>
                </div>
            </div>

            <div class="foto">
                <label for="foto">Foto</label>
                <input type="file" id="foto" name="registerImg" required>
            </div>

            <div class="passR">
                <input type="password" id="pass" name="pass" required minlength="6" placeholder="Contrase침a">
                <input type="password" id="pass2" name="pass2" required minlength="6" placeholder="Confirmar Contrase침a">
            </div>

            <div class="botones">
                <button action="/" type="submit" style="cursor: pointer;">Registrar</button>
                <button type="reset" style="cursor: pointer;">Borrar</button>
            </div>


        </form>


    </section>

